<% include ../partials/header %>

  <div class="row">
    <h1 style="text-align: center"> Create a New CampGround </h1>
    <div style="width: 30%; margin: 30px auto;">
      <form class="" action="/campgrounds" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" id="name" type="text" name="name" placeholder="name">
        </div>
        <div>
          <label for="image">Upload An Image</label>
          <input class="form-control" type="file" id="image" name="image" accept="image/*" />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input class="form-control" id="description" type="text" name="description" placeholder="description">
        </div>
        <div class="form-group">
          <label for="price">Cost</label>
          <input class="form-control" id="price" type="number" name="price" placeholder="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" placeholder="enter the location of the campground" required>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
  
<% include ../partials/footer %>
