<% include ../partials/header %>

  <div class="row">
    <h1 style="text-align: center">Add New Comment <%= campground.name %> </h1>
    <div style="width: 30%; margin: 30px auto;">
      <form class="" action="/campgrounds/<%= campground._id %>/comments" method="post">
        <div class="form-group">
          <label for="comment">Comment</label>
          <input class="form-control" id="comment" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

<% include ../partials/footer %>
